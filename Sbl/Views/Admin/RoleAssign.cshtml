@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <p class="box-title">Assign role to user</p>
            </div>
            <div class="box-content">
                @using (Html.BeginForm("roleassign", "admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <hr />
                    <div class="form-group">
                        @Html.Label("User", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownList("Username", (IEnumerable<SelectListItem>)ViewBag.Users, "", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Role", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownList("Name", (IEnumerable<SelectListItem>)ViewBag.Roles, "", new { @class = "form-control" })
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Assign" />
                            @Html.ActionLink("Cancel", "rolelist", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


