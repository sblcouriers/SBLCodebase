                                    @Html.LabelFor(m => m.CRPassportIssueDate, new { @class = "control-label" })
                                    <div class="input-group">
                                        @Html.EditorFor(m => m.CRPassportIssueDate, new { htmlAttributes = new { @class = "form-control sbl-datepicker" } })
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="icon-calender"></i></span>
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.CRPassportIssueDate)
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CRPassportExpiryDate, new { @class = "control-label" })
                                    <div class="input-group">
                                        @Html.EditorFor(m => m.CRPassportExpiryDate, new { htmlAttributes = new { @class = "form-control sbl-datepicker" } })
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="icon-calender"></i></span>
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.CRPassportExpiryDate)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CRNationalInsuranceNumber, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.CRNationalInsuranceNumber, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CRNationalInsuranceNumber)
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CRDriverLicense, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.CRDriverLicense, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CRDriverLicense)
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CRDriverLicenseCountryOfIssue, new { @class = "control-label" })
                                    @Html.DropDownListFor(m => m.CRDriverLicenseCountryOfIssue, (IEnumerable<SelectListItem>)ViewBag.Countries, "-- Select --", new { @class = "form-control select2 custom-select" })
                                    @Html.ValidationMessageFor(m => m.CRDriverLicenseCountryOfIssue)
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-1">
                                <a href="/induction/step2?guidid=@Model.GuidId" class="btn btn-lg btn-default"> Back to previous page</a>
                            </div>
                            <div class="col-md-5">
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Step3Signature, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Step3Signature, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Step3Signature)
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Step3DateSigned, new { @class = "control-label" })
                                    <div class="input-group">
                                        @Html.EditorFor(m => m.Step3DateSigned, new { htmlAttributes = new { @class = "form-control sbl-datepicker" } })
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="icon-calender"></i></span>
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Step3DateSigned)
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-success" style="margin-top: 30px; float: right;">
                                    <i class="fa fa-check"></i>
                                    <span> Next </span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        jQuery('.sbl-datepicker').datepicker({
            autoclose: true,
            todayHighlight: true,
            startView: 0,
            format: "dd M yyyy"
        });


        CheckCriminal();

        $(document.body).on("change", "#UnspentCriminalConviction", function () {
            CheckCriminal();
        });

        function CheckCriminal() {
            if ($("#UnspentCriminalConviction").val() == "true") {
                $(".criminalInfo").show();
            }
            else {
                $(".criminalInfo").hide();
            }
        }

        AutoFill();
        function AutoFill() {
            $("#Step3Signature").val($("#FullName").val());
            $("#Step3DateSigned").datepicker("setDate", new Date());
        }

    </script>
}
